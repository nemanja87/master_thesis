{
  "id": null,
  "title": "Bench Overview",
  "uid": "bench-overview",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "type": "timeseries",
      "title": "Gateway Latency (p95)",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_server_request_duration_seconds_bucket{job=\"gateway\"}[5m])) by (le)) * 1000",
          "legendFormat": "p95"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "CPU Utilization",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "avg(rate(process_cpu_seconds_total{job=~\"gateway|orderservice|inventoryservice\"}[5m])) by (job) * 100",
          "legendFormat": "{{job}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Request Rate by Service",
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_received_total{job=~\"gateway|orderservice|inventoryservice\"}[5m])) by (job)",
          "legendFormat": "{{job}}"
        }
      ]
    },
    {
      "type": "stat",
      "title": "ResultsService Writes/min",
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(entityframework_core_events_save_changes_total{job=\"resultsservice\"}[1m]))"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "" },
        "orientation": "horizontal"
      }
    }
  ],
  "templating": { "list": [] }
}
